{
  "manifest_version": 3,
  "name": "Simple Ad Blocker",
  "version": "1.1",
  "description": "Blocks ads on YouTube, Spotify, HBO Max, Netflix, and Twitch",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "declarativeNetRequest",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.spotify.com/*",
    "https://*.hbomax.com/*",
    "https://*.netflix.com/*",
    "https://*.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.spotify.com/*",
        "https://*.hbomax.com/*",
        "https://*.netflix.com/*",
        "https://*.twitch.tv/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "1": "icon1.png"
  }
}