{
  "manifest_version": 3,
  "name": "Simple Ad Blocker",
  "version": "1.0",
  "description": "Blocks ads on YouTube and Spotify",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "declarativeNetRequest",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.spotify.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*", "https://*.spotify.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "1": "icon1.png"
  }
}